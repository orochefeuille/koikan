<form method="post" action="{{ path('project_delete', {'id': project.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
    <button 
        class="btn btn-danger bg-orange-dark text-white rounded mx-1"
        data-toggle="tooltip" data-placement="top" title="Supprimer le projet">
        {% if app.request.get('_route') == 'project_edit' %}
            <span class="font-weight-bolder p-1">delete</span>
        {% else %}
            <i class="far fa-times-circle fa-2x"></i>
        {% endif %}
    </button>
</form>
