{% extends 'template.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block main %}
    <h2 id="homeH2">{{ app.user.firstname }} {{ app.user.lastname }} vos projets en cours :</h2>
    {% for project in app.user.projects %}
        <div class="card" style="width: 100%;">
            <div class="card-header row">
                <div class="col-6">
                    <div class="project-title">
                        <h3>{{ project.label}}</h3>
                        <small>Fin du projet prévue le {{ project.deadline|date('d-m-Y') }}</small>
                    </div>
                </div>
                <div class="col-6">
                    <div class="project-actions">
                        <a href="">détail</a>
                    </div>
                </div>  
                <div class="project-description mx-3">
                    <p>{{ project.description }}</p>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for task in project.tasks %}
                        <li class="list-group-item">
                            {{ task.label}}
                            <span class="mx-3 float-right">deadline : le {{ task.deadline|date('d-m-Y') }} à {{ task.deadline|date('h:m') }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
      {% endfor %}
{% endblock %}